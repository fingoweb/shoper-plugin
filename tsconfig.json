{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "paths": {
      "templates/*": ["./src/templates/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "consts/*": ["./src/consts/*"],
      "managers/*": ["./src/managers/*"],
    },
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["dist", "node_modules"],
}