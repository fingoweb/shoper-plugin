{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "createElement",
    "paths": {
      "templates/*": ["./src/templates/*"],
      "types/*": ["./src/types/*"],
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/.jsx", "**/.tsx"],
  "exclude": ["dist", "node_modules"],
}